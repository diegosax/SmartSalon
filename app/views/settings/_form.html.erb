<%= simple_form_for(@setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :work_on_sundays %>
    <%= f.input :work_on_saturdays %>
    <%= f.input :opening_time %>
    <%= f.input :closing_time %>
    <%= f.input :searchable %>
    <%= f.input :client_can_schedule %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
