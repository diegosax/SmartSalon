<h1>Listing settings</h1>

<table>
  <tr>
    <th>Work on sundays</th>
    <th>Work on saturdays</th>
    <th>Opening time</th>
    <th>Closing time</th>
    <th>Searchable</th>
    <th>Client can schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @settings.each do |setting| %>
  <tr>
    <td><%= setting.work_on_sundays %></td>
    <td><%= setting.work_on_saturdays %></td>
    <td><%= setting.opening_time %></td>
    <td><%= setting.closing_time %></td>
    <td><%= setting.searchable %></td>
    <td><%= setting.client_can_schedule %></td>
    <td><%= link_to 'Show', setting %></td>
    <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
    <td><%= link_to 'Destroy', setting, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

