<!DOCTYPE html>
<html>
<head>
	<title>Instanapp - Administrativo</title>
	<%= stylesheet_link_tag    "application-admin", :media => "all" %>
	<%= javascript_include_tag "application-admin" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	<div class="modal hide fade" id="confirmation-modal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Confirmação</h3>
		</div>
		<div class="modal-body">
			<p></p>
		</div>
		<div style="display:none" class="link" data-destination="">
		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss = "modal">Cancelar</a>
			<a class="btn btn-primary" id="confirm-btn">Confirmar</a>
		</div>
	</div>
	<div id="ajax-modal" class="modal hide fade" tabindex="-1"></div>
	<div class="modal hide" id="loading-modal">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">×</button>
			<h3>Carregando...</h3>
		</div>
		<div class="modal-body">
			<p>
				Processando, por favor aguarde...								
			</p>
			<br />
			<%=image_tag "/assets/ajax_loader.gif"%>
		</div>
		<div style="display:none" class="link" data-destination="">
		</div>		
	</div>	
	<div id="wrapper">		
		<!-- main content -->
		<header id="header" class="navbar navbar-inverse">
			<div class="navbar-inner">
				<div class="container">
					<div class="brand-wrap pull-left">
						<div class="brand-img">
							<a class="brand" href="#">
								<%=image_tag "/assets/logo.png"%>
							</a>
						</div>
					</div>
					<div id="header-right" class="clearfix">
						<div id="nav-toggle" data-toggle="collapse" data-target="#navigation" class="collapsed">
							<i class="icon-caret-down"></i>
						</div>						
						<div id="dropdown-lists">
							<%=link_to :back, :class => "item" do%>
							<span class="item-icon">
								<i class="icon-arrow-left"></i>
							</span>
							<span class="item-label">Voltar</span>								
							<%end%>
							<%=yield(:top_menu)%>
						</div>
						<div id="header-functions" class="pull-right">
							<div id="user-info" class="clearfix">
								<span class="info">
									<span class="name">
										<%=link_to [:admin,current_professional], "data-toggle" => "dropdown" do%>
										<%=current_professional.name%>
										<b class="carret"></b>
										<%end%>
										<ul class="dropdown-menu">
											<li><%= link_to "Vizualizar Perfil", admin_professional_path(current_professional)  %> <!--<a href="#tab-11" data-toggle="tab">Vizualizar Perfil</a>--></li>
											<!--<li><a href="#tab-12" data-toggle="tab">Second menu</a></li>-->
											<li class="divider"></li>
											<li><%=link_to "Sair", destroy_professional_session_path, :method => :delete%></li>
										</ul>
									</span>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</header>
		<aside id="sidebar">
			<nav id="navigation">
				<ul>
					<li class="<%=active_class('dashboard')%>">
						<%=link_to admin_dashboard_path do%>
						<span title="Dashboard">												
							<i class="icon-home"></i>
							<span class="nav-title">Dashboard</span>
						</span>
						<%end%>		
					</li>
					<li class="<%=active_class('events')%>">
						<%=link_to admin_events_path do%>
						<span title="Agenda">
							<i class="icon-calendar"></i>
							<span class="nav-title">Agenda</span>
						</span>
						<%end%>
					</li>

					<li class="<%=active_class('professionals')%>">		
						<%=link_to admin_professionals_path do%>
						<span title="Funcionários">
							<i class="icon-official"></i>
							<span class="nav-title">Funcionários</span>
						</span>
						<%end%>
					</li>

					<li class="<%=active_class('services')%>">
						<%=link_to admin_services_path do%>
						<span title="Serviços">
							<i class="icon-cog-3"></i>
							<span class="nav-title">Serviços</span>
						</span>
						<%end%>
					</li>

					<li class="<%=active_class('clients')%>">
						<%=link_to admin_clients_path do%>
						<span title="Clientes">
							<i class="icon-users"></i>
							<span class="nav-title">Clientes</span>
						</span>
						<%end%>
					</li>
					<li class="<%=active_class('salons')%>">
						<%=link_to admin_salon_path(current_professional.salon) do%>
						<span title="Configurações">
							<i class="icon-cogs"></i>
							<span class="nav-title">Meu Salão</span>
						</span>
						<%end%>
					</li>												
				</ul>
			</nav>
		</aside>
		<div id="content-wrap">
			<div id="content">
				<div id="content-outer">
					<div id="content-inner">						
						<section class="clearfix" id='main'>
							<%= yield %>
						</section>		
					</div>
				</div>

			</div>
		</div>

		<footer id="footer">
			<div class="footer-left">MoonCake - Responsive Admin Template</div>
			<div class="footer-right"><p>Copyright 2012. All Rights Reserved.</p></div>
		</footer>
	</body>
	<script type="text/javascript">
	<% flash.each do |name, msg| %>		
	var noty = noty(
	{
		text: '<%=escape_javascript(msg)%>',
		type: "<%= escape_javascript(name.to_s == 'notice' ? 'success' : 'error')%>",
		timeout: 4000
	}
	);
	<%end%>				
	</script>

	</html>
