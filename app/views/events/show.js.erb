var conteudo = "<%=escape_javascript(render :partial => "show", :locals => {:event => @event}, :layout => false)%>";
if ($("div[data-id=<%=@event.id%>]").hasClass("btAtivo")){
  $("div[data-id=<%=@event.id%>]").btOff();
  $("div[data-id=<%=@event.id%>]").removeClass("btAtivo");
} else{
$("div[data-id=<%=@event.id%>]").bt(conteudo,{
    positions: 'top',
    trigger: ['click','hover'],
    width: 220,
    centerPointX: .9,
    spikeLength: 65,
    spikeGirth: 40,
    padding: 15,
    cornerRadius: 25,
    fill: '#FFF',
    strokeStyle: '#ABABAB',
    strokeWidth: 1
    });

  $("div[data-id=<%=@event.id%>]").btOn();
  $("div[data-id=<%=@event.id%>]").addClass("btAtivo");
}