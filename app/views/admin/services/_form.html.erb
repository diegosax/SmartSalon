<%= simple_form_for([:admin,@service],:html=>{:class=>"form-horizontal", :id=> "new_admin_service_form"}) do |f| %>        
<% if @service.errors.any? %>
<div class="alert alert-danger fade in">
  <a href="#" class="close" data-dismiss="alert">×</a>
  <strong>Por favor corrija os erros abaixo:</strong><br>
  <p class="error-message">
    <% @service.errors.full_messages.each do |msg| %>
    <%= msg %>
    <br>
    <% end %>
  </p>
</div>        
<% end %>

<%=f.input :name, :label => 'Nome'%>


<%=f.input :price, :label => "Preço", :wrapper => :append_prepend do %>
  <span class="add-on">R$</span>
  <%=f.input_field :price, :class => "input-mini"%>
  <span class="add-on">reais</span>   
<%end%>
<%=f.input :duration, :label => "Duração", :wrapper => :append do%>
  <%=f.input_field :duration, :class => "input-mini"%>
  <span class="add-on">minutos</span>  
<%end%>
<div class="form-actions">
  <%=f.submit "Salvar", :class => "btn btn-primary"%>
  <%=link_to "Cancelar", :back, :class => "btn"%>
</div>
<%end%>          
