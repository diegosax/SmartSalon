<%=render "top_menu"%>

<div id="main-header" class="page-header">
	<h1 id="main-heading">
		Detalhes do Serviço <span><%=@service.name%></span>
	</h1>

</div>
<div id="main-content">
	<div class="row-fluid">
		<div class="form-horizontal widget">
			<div class="widget-header">
				<span class="title">Informações do Serviço</span>
				<div class="toolbar">
					<%=link_to "Alterar Serviço", edit_admin_service_path(@service), :class => "btn btn-gebo btn-mini" %>
				</div>
			</div>

			<div class="widget-content table-container">
				<table class="table table-striped table-detail-view">
					<tbody>
						<tr>
							<th>Nome</th>
							<td><%=@service.name%></td>
						</tr>
						<tr>
							<th>Preço</th>
							<td><%=@service.price if @service.price%></td>
						</tr>					
						<tr>
							<th>Duração</th>
							<td><%=distance_of_time_in_words(@service.duration*60)%> (<%=@service.duration%> minutos)</td>
						</tr>
					</tbody>					
				</table>
			</div>		
		</div>
	</div>
</div>
