<div class="w-box" id="working_times_box">
	<div class="w-box-header">
		Horários
		<div class="pull-right">
			<%=link_to "Criar novo horário de trabalho", 
				"#new_working_time",
				"data-toggle" => "modal", 
				:class => "btn btn-gebo btn-mini",				
				:id => "new_working_time"%>
		</div>
	</div>
	<div class="w-box-content">
		<table class="table table-striped" id="working_times">
			<thead>
				<tr>
					<th>Dia</th>
					<th>Início</th>
					<th>Fim</th>
					<th>Ações</th>
				</tr>
			</thead>
			<tbody>				
				<%@working_times.each do |wt| %>
					<%=render wt%>
				<%end%>
			</tbody>
		</table>
	</div>
</div>