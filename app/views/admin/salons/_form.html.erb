<div id="main-header" class="page-header">
    <h1 id="main-heading">
        Alterar Salão <span><%=@salon.name%></span>
    </h1>
</div>

<div id="main-content">
    <div class="row-fluid">
        <div class="span12 widget">
            <div class="widget-header">
                <span class="title">
                    Alterar Salão                                     
                </span>
            </div>
            <div class="widget-content form-container">
                <%= simple_form_for([:admin,@salon],:html=>{:class=>"form-horizontal", :id=> "new_admin_professional_form"}) do |f| %>
                
                <fieldset>
                    <legend>Dados do Salão</legend>
                    <%=f.input :name, :label => 'Nome'%>
                    <%=f.input :email, :label => 'E-mail'%>    
                    <div class="control-group">
                        <%=f.label :zipcode, "CEP", :class => "control-label"%>
                        <div class="controls">
                            <%=f.input_field :zipcode%><%=image_tag "/assets/small_loader.gif", :class => 'zipcode_loading'%>
                        </div>
                    </div>
                    <%=f.input :address, :label => "Endereço"%>
                    <%=f.input :number, :label => "Número"%>
                    <%=f.input :complement, :label => 'Compelemento'%>
                    <%=f.input :neighborhood, :label => 'Bairro'%>
                    <%=f.input :city, :label => 'Cidade'%>
                    <%=f.input :state, :label => 'Estado'%>
                    <%=f.input :landphone, :label => 'Telefone Fixo'%>
                    <%=f.input :celphone, :label => 'Celular'%>

                </fieldset>

                <fieldset>
                    <legend>Dados de Administrador do Salão</legend>
                    <%=f.input :username, :label => "Login"%>
                                    
                </fieldset>                

                <div class="form-actions">
                    <%=f.submit "Salvar", :class => "btn btn-primary"%>
                    <%=link_to "Cancelar", :back, :class => "btn"%>
                </div>
           
                <%end%>
            </div>
        </div>

    </div>
    
</div>