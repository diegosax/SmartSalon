<div id="main-header" class="page-header">
	<h1 id="main-heading">
		Informações sobre o salão <span> <%=@salon.name%></span>
	</h1>
</div>

<div id="main-content">
	<div class="row-fluid">
		<div class="form-horizontal widget">
			<div class="widget-header">
				<span class="title">
					Detalhes do Salão
				</span>
				<div class="toolbar">
					<%=link_to "Editar Salão", edit_admin_salon_path(@salon), :class => "btn btn-gebo btn-mini" %>
				</div>
			</div>
			<div class="widget-content table-container">
				<table class="table table-striped table-detail-view">
					<tbody>
						<tr>
							<th>Código</th>
							<td><%=@salon.id%></td>
						</tr>
						<tr>
							<th>Nome</th>
							<td><%=@salon.name%></td>
						</tr>
						<tr>
							<th>Nome de usuário</th>
							<td><%=@salon.username%></td>
						</tr>
						<tr>
							<th>Telefone</th>
							<td><%=@salon.fone%></td>
						</tr>
						<tr>
							<th>Logo</th>
							<td><%=image_tag @salon.logo.url(:thumb)%></td>
						</tr>
						<tr>
							<th>Email</th>
							<td><%=@salon.email%></td>
						</tr>
						<tr>
							<th>Endereço</th>
							<td>
								<address>                
									<%=@salon.address%>                
									<br />
									<%=@salon.city%>, <%=@salon.state%> <%=@salon.zipcode%>								
								</address>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="form-horizontal widget">
			<div class="widget-header">
				<span class="title">
					Assinatura Atual
				</span>
			</div>
			<div class="widget-content table-container">
				<table class="table table-striped form-inline">
					<thead>
						<tr>
							<th>Descrição</th>
							<th>Início</th>
							<th>Fim</th>
							<th>Período de testes</th>
							<th>Preço mensal</th>
							<th>Ativo</th>
						</tr>
					</thead>
					<tbody>
						<tr id="cs<%=@currentSubscription.id%>">
							<td><%=@currentSubscription.description%></td>
							<td><%=@currentSubscription.initial_date%></td>
							<td><%=@currentSubscription.end_date%></td>
							<td><%=@currentSubscription.trial_period%> mêses </td>
							<td><%=@currentSubscription.price%></td>
							<% if @currentSubscription.status %> 
							<td> Sim  </td> 
							<% else %>
							<td> Não  </td>             
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="form-horizontal widget">
			<div class="widget-header">
				<span class="title">
					Pagamentos
				</span>
			</div>
			<div class="widget-content table-container">
				<table class="table table-striped form-inline">
					<thead>
						<tr>
							<th>Descrição</th>
							<th>Data de pagamento</th>
							<th>Data de efitivação do pagamento</th>
							<th>Pago</th>
						</tr>
					</thead>
					<tbody>
						<%@currentSubscription.payments.each do |p| %>
						<tr id="p<%=@currentSubscription.id%>">
							<td><%=p.description%></td>
							<td><%=p.due_date%></td>
							<td><%=p.payment_date%></td>
							<% if p.status %> 
							<td> Sim  </td> 
							<% else %>
							<td> Não  </td>             
							<% end %>
						</tr>
						<%end%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>