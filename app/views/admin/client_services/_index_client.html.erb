<div class="form-horizontal widget span6">
	<div class="widget-header">
		<span class="title">
			Duração de serviço específica para este cliente
		</span>
		<div class="toolbar">
			<%=link_to new_admin_client_client_service_path(@client), :class => "btn btn-gebo btn-mini", "data-toggle" => "remote-modal",:remote => true, :id => "new_client_service" do%>
			<i class="icon-plus"></i>
			Adicionar serviço ao cliente
			<%end%>
		</div>

	</div>
	<div class="widget-content table-container">
		<table class="table table-striped form-inline" id="associated_services">
			<%if @associated_services.length > 0%>
				<thead>
					<tr>
						<th colspan="3"><i class="icol-exclamation"></i> <strong>Cliente: </strong> <%=@client.name%></th>
					</tr>
					<tr>
						<th>Serviço</th>
						<th>Duração especial</th>
						<th></th>
					</tr>
				</thead>
				<tbody>				
					<%@associated_services.each do |clientService| %>
					<%=render clientService%>
					<%end%>
				</tbody>
			<%else%>
				<div class="alert alert-info alert-block">
					<h4>Ainda não existem associações criadas</h4>
					<i class="icon-info-sign"></i>
					Aqui você define quanto tempo determinado cliente gasta em um serviço
				</div>
			<%end%>
			
		</table>
	</div>
</div>