<div class="widget">
	<div class="widget-header">
		<span class="title">Serviços

		</span>
		<div class="toolbar">
			<%=link_to "Associar novo serviço", new_admin_professional_professional_service_path(@professional), :class => "btn btn-gebo btn-mini", :remote => true, :id => "new_professional_service"%>
		</div>
	</div>
	<div class="widget-content table-container">
		<table class="table table-striped" id="associated_services">
			<thead>
				<tr>
					<th>Nome</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<%@professional.professional_services.each do |ps| %>
					<%=render ps%>
				<%end%>
			</tbody>
		</table>
	</div>
</div>