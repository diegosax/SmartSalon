<div class="row-fluid">
	<div class="span12">
		<ul class="dshb_icoNav clearfix">
			<li>
				<%=link_to "Adicionar", new_admin_professional_path, :style=> "background-image: url(/assets/gCons/add-item.png)"%>
			</li>
		</ul>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<h2 class="heading">Profissionais</h2>
		<table class="table table-bordered table-striped table_vam" id="dt_gal">
			<thead>
				<tr>
					<th>Nome</th>
					<th>E-mail</th>
					<th>Telefone residencial</th>
					<th>Telefone celular</th>
					<th>Ação</th>
				</tr>
			</thead>
			<tbody>

				<%@professionals.each do |p|%>
				<tr id="p_<%=p.id.to_s%>">					
					<td>
						<%=p.name%>
					</td>
					<td>
						<%=p.email%>
					</td>
					<td>
						<%=p.landphone%>
					</td>
					<td>
						<%=p.celphone%>
					</td>
					<td>

						<%=link_to [:admin,p], 
						"data-method-type" => :delete, 
						:class => "btn btn-mini pull-right btn-danger confirmable",
						"data-message" => "Deseja realmente remover este profissional?" do%>
						<i class="icon-trash"></i>
						Remover
						<%end%>
            
						<%=link_to edit_admin_professional_path(p), 
						:class => "btn btn-mini pull-right btn-warning" do%>
						<i class="icon-edit"></i>
						Editar
						<%end%>

					</td>
				</tr>
				<%end%>
			</tbody>
		</table>

	</div>
</div>
