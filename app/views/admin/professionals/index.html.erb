<%=render "top_menu"%>

<header>
	<h2>
		Funcionários
	</h2>
</header>
<div id="main-content">
	<%=render "context_menu"%>
	<div class="row-fluid">		
		<div class="span12 widget">
			<div class="widget-header">
				<span class="title">Funcionários</span>
				<div class="toolbar">
					<%=link_to new_admin_professional_path, :class => "btn btn-gebo btn-mini" do%>
						<i class="icon-plus"></i>
						Novo Funcionário
					<%end%>					
				</div>
			</div>
			<div class="widget-content table-container">
				<table class="table table-striped form-inline" id="professionals_list">
					<%if @professionals.length > 0%>
					<thead>
						<tr>
							<th>Nome</th>
							<th>E-mail</th>
							<th>Telefone</th>
							<th>Telefone adicional</th>				
							<th></th>		
						</tr>
					</thead>
					<tbody>

						<%@professionals.each do |p|%>
						<tr id="p_<%=p.id.to_s%>">					
							<td>
								<%=p.name%>
							</td>
							<td>
								<%=p.email%>
							</td>
							<td>
								<%=p.landphone%>
							</td>
							<td>
								<%=p.celphone%>
							</td>
							<td class="action-col">
								<span class="btn-group">
									<%=link_to [:admin, p], 
									:class => "btn btn-small btn-primary" do%>
									<i class="icon-search"></i>
									Detalhes
									<%end%>
									<%if can? :update, p%>
										<%=link_to edit_admin_professional_path(p), 
										:class => "btn btn-small btn-warning" do%>
										<i class="icon-pencil"></i>
										Editar
										<%end%>
										<%=link_to [:admin,p], 
										"data-method-type" => :delete, 
										:class => "btn btn-small btn-danger confirmable",
										"data-message" => "Deseja realmente remover este profissional?" do%>
										<i class="icon-trash"></i>
										Remover
										<%end%>
									<%end%>		

								</span>


							</td>
						</tr>
						<%end%>
					</tbody>
					<%else%>
						<div class="alert alert-info alert-block">
							<h4>Você ainda não possui nenhum funcionário cadastrado</h4>
						</div>
					<%end%>					
				</table>	
			</div>


		</div>
	</div>	
</div>

