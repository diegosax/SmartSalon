<%=render "/admin/utils/top_nav"%>

<div class="row-fluid">
	<div class="span12">
		<h2 class="heading">
			Perfil
		</h2>
		<form class="form-horizontal well">
			<p>
				<strong>Nome:</strong> <%=@professional.name%>
			</p>
		<!-- Services -->
			<p><div class="w-box">
				<div class="w-box-header">
					Meus Serviços
					<div class="pull-right">
						<%=link_to "Associar novo serviço", new_admin_professional_service_path, :class => "btn btn-gebo btn-mini", :remote => true, :id => "new_professional_service"%>
					</div>
				</div>
				<div class="w-box-content">
					<table class="table table-striped" id="associated_services">
						<thead>
							<tr>
								<th>Nome</th>
								<th>Ações</th>
							</tr>
						</thead>
						<tbody>
							<%@professional.professional_services.each do |ps| %>
								<%=render ps%>
							<%end%>
						</tbody>
					</table>
				</div>
			</div></p>


		<!-- Working Times -->
			<p>
				<%=render "/admin/working_times/working_times"%>
			</p>
		</form>
	</div>
</div>
