<%=render "top_menu"%>

<%=render "/admin/working_times/modal_form"%>


<div id="main-header" class="page-header">
	<h1 id="main-heading">
		Detalhes do funcionário <span><%=@professional.name%></span>
	</h1>

</div>
<div id="main-content">
	<div class="row-fluid">
		<div class="form-horizontal widget">
			<div class="widget-header">
				<span class="title">Perfil do usuário</span>
				<div class="toolbar">
					<%=link_to edit_admin_professional_path(@professional), :class => "btn btn-gebo btn-mini" do%>
						<i class="icol-application-edit"></i>
						Alterar Perfil
					<%end%>					
				</div>
			</div>

			<div class="widget-content table-container">
				<table class="table table-striped table-detail-view">
					<tbody>
						<tr>
							<th>Nome</th>
							<td><%=@professional.name%></td>
						</tr>
						<tr>
							<th>Email</th>
							<td><%=@professional.email%></td>
						</tr>					
						<tr>
							<th>Senha</th>
							<td>******** | <%=link_to "Alterar minha senha", "#"%></td>
						</tr>
					</tbody>					
				</table>
			</div>		
		</div>
		<%=render "professional_services"%>
		<%=render "/admin/working_times/working_times"%>	
	</div>
</div>
