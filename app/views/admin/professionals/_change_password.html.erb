<div class="modal hide fade" id="change_password">
  <%= simple_form_for([:admin,@professional], :url => {:action => "update_password"} ,:html=>{:class=>"form-horizontal"}) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3>Alterar Senha</h3>
  </div>
  <div class="modal-body">    
      <%=f.input :password, :label => "Senha"%>
      <%=f.input :password_confirmation, :label => "Confirme sua Senha"%>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss='modal'>Cancelar</a>
    <%=f.button :submit, "Alterar Senha", :class=> "btn btn-primary"%>    
  </div>  
  <%end%>
</div>
