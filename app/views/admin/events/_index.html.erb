<%=render "top_menu"%>

<header>
	<h2>Listar Agendamentos</h2>
</header>
<div id="main-content">
	<%=render "context_menu"%>
	<h4 class="sub">
		<span>
			Escolha o modo de visualização dos dados
		</span>
	</h4>
	<ul class="nav nav-pills">
		<li class="<%=active_action('events','calendar')%>">
			<%=link_to "Calendário", calendar_admin_events_path%>
		</li>
		<li class="<%=active_action('events','index')%>">
			<%=link_to "Lista", admin_events_path%>
		</li>		
	</ul>
	
	<%if action_name == "calendar"%>	
		<%=render "calendar_view"%>	
	<%else%>
		<%=render "list_view"%>
	<%end%>
</div>